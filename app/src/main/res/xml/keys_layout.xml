<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="10%p"
    android:horizontalGap="3px"
    android:verticalGap="3px"
    android:keyHeight="60dp"
    android:keyTextColor="@color/colorAccent"
    android:keyBackground="@color/colorPrimaryDark"
    >
    <Row android:keyWidth="100%p">
        <Key android:codes="1" android:keyLabel="↑" android:keyEdgeFlags="left"/></Row>
    <Row android:keyWidth="100%p">
        <Key android:codes="2" android:keyLabel="←"/>
        <Key android:codes="-4" android:keyBackground="@color/colorPrimary" android:keyLabel="OK"  android:keyEdgeFlags="right"/>
        <Key android:codes="3" android:keyLabel="→"/>
    </Row>
    <Row android:keyWidth="100%p">
        <Key android:codes="4" android:keyLabel="↓"/>
    </Row>

    <Row android:keyWidth="100%p">
        <Key android:codes="49" android:keyLabel="1" android:keyEdgeFlags="left"/>
        <Key android:codes="50" android:keyLabel="2"/>
        <Key android:codes="51" android:keyLabel="3"/></Row>
    <Row android:keyWidth="100%p">
        <Key android:codes="52" android:keyLabel="4"/>
        <Key android:codes="53" android:keyLabel="5"/>
        <Key android:codes="54" android:keyLabel="6"/></Row>
    <Row android:keyWidth="100%p">
    <Key android:codes="55" android:keyLabel="7"/>
        <Key android:codes="56" android:keyLabel="8"/>
        <Key android:codes="57" android:keyLabel="9"/>  </Row>
    <Row android:keyWidth="100%p">
        <Key android:codes="-5" android:keyLabel="DEL"  android:isRepeatable="true" android:keyEdgeFlags="right"/>
        <Key android:codes="48" android:keyLabel="0"/>
        <Key android:codes="32" android:keyLabel="SPACE" android:isRepeatable="true"/>
    </Row>
</Keyboard>